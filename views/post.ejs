<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
      <!-- link to profile below -->
        <a href="/profile">Profile</a>
        <!-- link to feed below -->
        <a href="/feed">Feed</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <!-- card with post -->
    <div class="row d-flex justify-content-center">
      <div class="col-sm-6">
        <h3>Post</h3>
        <ul class="messages">
        <% for(var i=0; i<posts.length; i++) {%>
          <div class="#">
            <div class="card bg-light ">
              <div class="card-body text-center">
                <img
                  src= "../<%= posts[i].img %>"
                  class="mb-3 img-fluid"
                />
                <h3 class="card-title mb-3"><%=posts[i].postedBy%>
                </h3>
                <p class="card-text">
                  <strong>caption:</strong><%= posts[i].caption %>
                </p>
              </div>
            </div>
          </div>
        </div>
          <!-- <li class="message">
            <h4><%= posts[i].caption %></h4>
            <img src="../<%= posts[i].img %>" alt="">  
          </li> -->
          
        <% } %>
        </ul>
      </div>
    </div>

    <!-- make a comment -->
    <form class="d-flex justify-content-center" action="/makePostComment/<%= posts[0]._id%>" method="POST">
      <input type="text" name="comment" placeholder="comment">
    
      <button type="submit">Submit</button>
    </form>

    <!-- rendered comments -->
    <section class= "containter d-flex justify-content-center">
      
      <ul class="list-group">
        
        <% for(var i=0; i<comments.length; i++) {%>
          <li class="list-group-item">
            <h4><%= comments[i].postedBy%> : <%= comments[i].comment%> </h4>
          </li>
        <% } %>
      </ul>
    </section>
   
     
        
        
     
  




    
    


</div>

<script src="/main.js"></script>

</body>
</html>
